enum CorrectType {
  CORRECT
  PARTIALLY
  INCORRECT
}

model SessionParticipantAnswer {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  sessinQuestionId String             @db.ObjectId
  sessionQuestion  SessionQuestion    @relation(fields: [sessinQuestionId], references: [id])
  participantId    String             @db.ObjectId
  participant      SessionParticipant @relation(fields: [participantId], references: [id], name: "SessionParticipantAttemptAnswer")
  answer           Json
  scored           Float
  timeTaken        Int
  isCorrect        CorrectType
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
}
