enum SessionStatus {
  ACTIVE
  FINISHED
  WAITING
}

model Session {
  id               String               @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  status           SessionStatus
  participants     SessionParticipant[] @relation(name: "SessionParticipantSessionRelation")
  quizId           String               @db.ObjectId
  quiz             Quiz                 @relation(fields: [quizId], references: [id], name: "QuizSessionRelation")
  reports          Report[]             @relation(name: "SessionReportRelation")
  shuffleQuestions Boolean
  shuffleAnswers   Boolean
  questions        SessionQuestion[]
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
}
