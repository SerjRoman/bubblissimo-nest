model Question {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  type            QuestionType
  data            Json
  quizzes         QuestionToQuiz[]
  createdAt       DateTime         @default(now())
  updateAt        DateTime         @default(now())
  favouritedBy    TeacherProfile[] @relation(fields: [favouritedByIds], references: [id], name: "FavouriteQuestionsRelation")
  favouritedByIds String[]         @db.ObjectId
  createdBy       TeacherProfile   @relation(fields: [createdById], references: [id], name: "CreatedQuestionsRelation")
  createdById     String           @db.ObjectId
}

enum QuestionType {
  MULTIPLE_CHOICE
  SINGLE_CHOICE
  FILL_IN_THE_GAP
}
